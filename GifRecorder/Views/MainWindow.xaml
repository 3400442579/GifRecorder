<Window x:Class="GifRecorder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GifRecorder"
        mc:Ignorable="d"
        Title="MainWindow" Height="190" Width="256">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Top">
            <Label>Aufnahmezeit in Sekunden:</Label>
            <TextBox x:Name="Seconds" Text="10"></TextBox>
            <Label>Dateiname:</Label>
            <TextBox x:Name="FileName" Text="Aufnahme1"></TextBox>
            <Button Click="Button_Click">Start</Button>
            <Button Click="Button_Click_1">Set section</Button>
            <Label x:Name="Status" Content="Startbereit" HorizontalAlignment="Center"></Label>
        </StackPanel>
    </Grid>
</Window>
